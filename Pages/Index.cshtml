@page
@model IndexModel
@{
    ViewData["Title"] = Model.Service + ": Modify your emails with AI";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        .container {
            display: block;
            margin-bottom: 5px;
        }

        .header {
            text-align: center;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        input[type="text"],
        select {
            width: calc(100% - 20px);
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        input[type="submit"] {
            padding: 10px 15px;
            background-color: #ffffff;
            color: rgb(0, 0, 0);
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        input[type="submit"]:hover {
            background-color: #cac9c9;
        }

        .example-prompts {
            text-align: left;
            margin-top: 30px;
        }

        .nav-link {
            color: #337ab7;
            text-decoration: none;
        }

        .nav-link:hover {
            text-decoration: underline;
        }

        .alert {
            padding: 15px;
            background-color: #dff0d8;
            color: #3c763d;
            border-radius: 4px;
            margin-top: 20px;
        }

         body {
            background: linear-gradient(to right, #9bd3f8, #e9ff6d); 
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            color: #333;
        }

        .form-wrapper {
            display: flex;
            justify-content: space-between;
            background-color: rgba(255, 255, 255, 0.9);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .form-row {
            display: flex;
            margin-bottom: 10px;
            align-items: center;
        }

        .form-row>label {
            margin-right: 10px;
            white-space: nowrap;
        }

        .form-row>input[type="text"],
        .form-row>select {
            flex: 1;
            margin-right: 10px;
        }

        .form-row>input[type="submit"] {
            margin: 0;
        }

        .multi-field-row {
            display: flex;
            justify-content: space-between;
        }

        .field-group {
            flex-basis: 48%;
        }

        input[type="text"],
        select {
            margin-bottom: 0;
        }

        input[type="text"],
        textarea {
            width: 40%;
            padding: 10px;
            height: 60px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
            color: #333;
        }

        input[type="submit"] {
            background-color: #08578b; 
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
         .alert-success {
            background-color: #2ecc71;
            color: white;
        }
    </style>
</head>

<body>
    <div class="container">
        <header class="header">
            <h1>@ViewData["Title"]</h1>
        </header>

        <main>
            <form method="post" class="job-application-form">
                <div>
                    <label for="jobDescription">Job Description:</label>
                    <textarea id="jobDescription" name="JobDescription" required
                        placeholder="Paste the job description here..."></textarea>
                </div>
                <div>
                    <label for="resume">Resume (JSON):</label>
                    <textarea id="resume" name="ResumeJson" required
                        placeholder="Enter your resume in JSON format..."></textarea>
                </div>
                <input type="submit" value="Generate Application Email" />
            </form>


            @if (Model.Reply != null)
            {
                <div class="alert">@Model.Reply</div>
            }
        </main>
    </div>
</body>

</html>