@page
@model ResumeReviewModel
@{
    ViewData["Title"] = "ResumeReview";
}
<html>
<head>
<style>
        .container {
            display: block;
            margin-bottom: 5px;
        }

        .header {
            text-align: center;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        input[type="text"],
        select {
            width: calc(100% - 20px);
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        input[type="submit"] {
            padding: 10px 15px;
            background-color: #ffffff;
            color: rgb(0, 0, 0);
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        input[type="submit"]:hover {
            background-color: #cac9c9;
        }

        .example-prompts {
            text-align: left;
            margin-top: 30px;
        }

        .nav-link {
            color: #337ab7;
            text-decoration: none;
        }

        .nav-link:hover {
            text-decoration: underline;
        }

        .alert {
            padding: 15px;
            background-color: #dff0d8;
            color: #3c763d;
            border-radius: 4px;
            margin-top: 20px;
        }

         body {
            background: linear-gradient(to right, #9bd3f8, #e9ff6d); 
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            color: #333;
        }

        .form-wrapper {
            display: flex;
            justify-content: space-between;
            background-color: rgba(255, 255, 255, 0.9);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            width: 80%;
        }

        .form-row {
            display: flex;
            margin-bottom: 10px;
            align-items: center;
        }

        .form-row>label {
            margin-right: 10px;
            white-space: nowrap;
        }

        .form-row>input[type="text"],
        .form-row>select {
            flex: 1;
            margin-right: 10px;
        }

        .form-row>input[type="submit"] {
            margin: 0;
        }

        .multi-field-row {
            display: flex;
            justify-content: space-between;
        }

        .field-group {
            flex-basis: 48%;
        }

        input[type="text"],
        select {
            margin-bottom: 0;
        }

        input[type="text"],
        textarea {
            width: 60%;
            padding: 10px;
            height: 60px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
            color: #333;
        }

        input[type="submit"] {
            background-color: #08578b; 
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
         .alert-success {
            background-color: #2ecc71;
            color: white;
        }
        .form-column {
            flex-basis: 58%;        
        }
    </style>
</head>
<body>

    <div>
        <h1 style="color: white; margin-top: 30px ">Submit Your Resume and Job Description</h1>


        <form method="post" id="ResumeJobForm">
            <br/>
            <div class="form-wrapper">
                <div class="form-column">
                    <h3>Professional Information</h3>
                    <label for="fullName">Name</label><br>
                    <input id="fullName" name="fullName"><br><br>

                    <label for="email">Email</label><br>
                    <input for="email" name="email"><br><br>

                    <label for="experience">Experience</label><br>
                    <input type="text" id="experience" name="experience"></input><br><br>

                    <label for="education">Education</label><br>
                    <input type="text" id="education" name="education"></input><br><br>

                    <h3>Skills and Projects</h3>
                    <label type="text" for="skills">Skills</label><br>
                    <input type="text" id="skills" name="skills" ></input><br><br>

                    <label for="projects">Projects</label><br>
                    <input type="text" id="projects" name="projects"></input><br><br>
                </div>
                <div class="form-column" style="margin-left: 100px;">
                    <h3>Job Details</h3>
                    <label for="companyName">Company Name</label><br>
                    <input type="text" id="companyName" name="companyName"><br><br>

                    <label for="jobTitle">Job Title</label><br>
                    <input type="text" id="jobTitle" name="jobTitle"><br><br>

                    <h3>Job Responsibilities</h3>
                    <input type="text" id="jobResponsibilities" name="jobResponsibilities" ></input><br><br>

                    <h3>Job Requirements</h3>
                    <input  type="text" id="jobRequirements" name="jobRequirements" ></input><br><br>
                </div>
            </div>
            <input type="submit" value="Refine my resume">
        </form>
    </div>

    <div>
        @if (Model.Reply != null)
        {
            <p class="alert alert-success">@Model.Reply</p>
        }
    </div>
</body>
</html>
